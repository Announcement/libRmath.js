{
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],

  "compilerOptions": {
     "strictNullChecks": true,
    "noImplicitAny": true,
    "target": "es5",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "lib",
    "moduleResolution": "node",
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    /*outDir is overriden in the gulp file*/
    "outDir": "dist/js"

  }
}

